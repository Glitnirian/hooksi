{
    "compilerOptions": {
      "declaration": true,
      "declarationDir": "./dist",
      "module": "commonjs",
      "noImplicitAny": true,
      "lib": ["ESNext"],
      "outDir": "./dist",
      "target": "es5",
      "moduleResolution": "node"
    },
    "typedocOptions": {
      "mode": "modules",
      "out": "docs"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }